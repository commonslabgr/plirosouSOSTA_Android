<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#55b4ae</item>
        <item name="colorPrimaryDark">#459d98</item>
        <item name="colorAccent">#459d98</item>
        <item name="android:datePickerStyle">@style/MySpinnerPickerStyle</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:spinnersShown">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowTitleBackground">

    </style>

    <style name="InfoDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:background">#459d98</item>
        <item name="android:color">#FFFFFF</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#55b4ae</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:colorAccent">#FFFFFF</item>
        <item name="android:fontFamily">@font/mediumfont</item>
    </style>

    <style name="MySpinnerPickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
        <item name="android:timePickerStyle">@style/MySpinnerTimePicker</item>
        <item name="android:background">#55b4ae</item>
        <item name="android:colorAccent">#FFFFFF</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="MySpinnerTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
</resources>
